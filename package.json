{
  "name": "blockchain-notary-service",
  "version": "1.0.0",
  "description": "Blockchain-based notarization service using Solidity smart contracts for document authentication and versioning",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "deploy": "hardhat run scripts/deploy.js",
    "deploy:localhost": "hardhat run scripts/deploy.js --network localhost",
    "deploy:goerli": "hardhat run scripts/deploy.js --network goerli",
    "deploy:mainnet": "hardhat run scripts/deploy.js --network mainnet",
    "node": "hardhat node",
    "console": "hardhat console",
    "clean": "hardhat clean",
    "coverage": "hardhat coverage",
    "lint": "solhint 'contracts/**/*.sol'",
    "lint:fix": "solhint 'contracts/**/*.sol' --fix",
    "start": "node app.js",
    "dev": "nodemon app.js"
  },
  "keywords": [
    "blockchain",
    "notary",
    "solidity",
    "ethereum",
    "smart-contracts",
    "document-verification",
    "timestamping",
    "proof-of-existence"
  ],
  "author": "Blockchain Notary Service",
  "license": "MIT",
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "@nomiclabs/hardhat-waffle": "^2.0.6",
    "@typechain/ethers-v5": "^10.2.1",
    "@typechain/hardhat": "^6.1.6",
    "chai": "^4.3.7",
    "ethereum-waffle": "^4.0.10",
    "ethers": "^5.7.2",
    "hardhat": "^2.17.1",
    "hardhat-gas-reporter": "^1.0.9",
    "nodemon": "^3.0.1",
    "solhint": "^3.6.2",
    "solidity-coverage": "^0.8.4",
    "typechain": "^8.3.1"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "multer": "^1.4.5-lts.1",
    "dotenv": "^16.3.1",
    "helmet": "^7.0.0",
    "morgan": "^1.10.0",
    "rate-limiter-flexible": "^2.4.2"
  },
  "engines": {
    "node": ">=14.0.0"
  }
} 